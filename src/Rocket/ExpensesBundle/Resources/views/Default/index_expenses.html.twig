{% extends 'RocketExpensesBundle:Default:uikit-base.html.twig' %}
{% block content %}
<style>.ng-cloak {display: none;}</style>
<div class="uk-container uk-container-center">
  <div class="uk-width-1-1">
    <h1>Expenses</h1>
    {% verbatim %}
       <div data-ng-app="expenses" class="ng-cloak">
          <div class="controller" data-ng-controller="ExpensesController">
              <a class="uk-button" href="expenses/create">Create</a>
              <a class="uk-button" data-ng-click="load_expenses()">Load</a>
              <table class="uk-table" data-ng-show="expenses">
                <thead>
                  <tr>
                      <th>Id</th>
                      <th>Description</th>
                      <th>Date</th>
                      <th>Amount</th>
                  </tr>
                </thead>
                <tbody>
                  <tr data-ng-repeat="expense in expenses">
                  <td>{{ expense.id }}</td>
                  <td>{{ expense.description }}</td>

                  <td>
                  {{ expense.date.date | rocketDate | date:'medium' }}</td>
                  <td>{{ expense.amount }}</td>
                  </tr>
                </tbody>
              </table>
          </div>
      </div>
      {% endverbatim %}
  </div>
</div>
{% endblock %}
{% block angular %}
  <script src="{{ asset('js/angular/angular-resource.js') }}"></script>
  <script src="{{ asset('RocketApp/expenses.js') }}"></script>
{% endblock %}
