{% extends 'base.html.twig' %}

{% block body %}
    <h1>Organization</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ organization.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ organization.name }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if organization.created %}{{ organization.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ organization.description }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ organization.owner }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('organization_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('organization_edit', { 'id': organization.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
