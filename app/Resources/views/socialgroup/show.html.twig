{% extends 'base.html.twig' %}

{% block body %}
    <h1>SocialGroup</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ socialGroup.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ socialGroup.name }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if socialGroup.created %}{{ socialGroup.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ socialGroup.createdBy }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('socialgroup_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('socialgroup_edit', { 'id': socialGroup.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
