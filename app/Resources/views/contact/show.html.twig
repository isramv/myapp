{% extends 'base-uikit.html.twig' %}

{% block navigation %}
    <div class="uk-button-group">
        <a class="uk-button uk-button-primary" href="{{ path('contact_index') }}">Back</a>
        <a class="uk-button uk-button-primary" href="{{ path('contact_edit', { 'id': contact.id }) }}">Edit</a>
    </div>
{% endblock %}

{% block pagetitle %}Contact: {{ contact.firstName }} {{ contact.lastName }}{% endblock %}

{% block body %}
    <table class="uk-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Nameprefix</th>
                <td>{{ contact.namePrefix }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ contact.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ contact.lastName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ contact.description }}</td>
            </tr>
            <tr>
                <th>Emails</th>
                <td>{% if contact.emails %}{{ contact.emails|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Phones</th>
                <td>{% if contact.phones %}{{ contact.phones|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Twitter</th>
                <td>{{ contact.twitter }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ contact.facebook }}</td>
            </tr>
            <tr>
                <th>Linkedin</th>
                <td>{{ contact.linkedIn }}</td>
            </tr>
            <tr>
                <th>Jobtitle</th>
                <td>{{ contact.jobTitle }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{% if contact.birthday %}{{ contact.birthday|date('d M Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ contact.gender }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ contact.picture }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if contact.created %}{{ contact.created|date('d M Y H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
        <input class="uk-button uk-button-danger" type="submit" value="Delete">
    {{ form_end(delete_form) }}
{% endblock %}
